<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="8dp">

    <ImageView
        android:id="@+id/item_song_cover"
        android:layout_width="48dp" android:layout_height="48dp"
        android:src="@drawable/ic_music_note" android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/item_song_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Song title" android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_song_subtitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Artist" android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
