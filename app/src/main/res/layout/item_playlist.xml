<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Playlist Image -->
        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:contentDescription="Playlist Image"
            android:src="@drawable/ic_library_music"
            app:tint="@color/accent" />

        <!-- Text Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/playlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Name"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/playlist_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/songs_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 songs"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Optional chevron / arrow -->
        <ImageView
            android:id="@+id/playlist_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
